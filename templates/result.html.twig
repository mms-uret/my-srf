<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>MySFR Project</title>
		<link rel="preconnect" href="https://fonts.gstatic.com" />
		<link
			href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600&display=swap"
			rel="stylesheet"
		/>
		<link rel="stylesheet" href="style.css" />
	</head>
	<body>
		<header>
			<div class="banner">
				<img src="logo.png" alt="SRF" class="logo" />
				<h1>News</h1>
			</div>
			<ul>
				<li>My SRF</li>
			</ul>
		</header>

		<main>
			<div class="wrapper">
				<div class="info">
					<h2>Personalize mySRF</h2>
					<strong>1/10</strong>
				</div>

				{% for recommender in recommenders %}
				<div>
					<h3>{{ recommender.name }}</h3>
					<p>{{ recommender.reason }}</p>
					<ul>
						{% for article in recommender.recommendations %}
							<li>reason: {{ article.reason }}, certainty: {{ article.certainty }} Title: <a href="{{ article.info.representationLinks.web }}">{{ article.info.title }}</a></li>
						{% endfor %}
					</ul>
				</div>
				{% endfor %}

			</div>
		</main>

		<script>
			let transition = () => {
				let article = document.querySelector("article");
				let next = document.querySelector("article.next");
				let hidden = document.querySelector("article.hidden");

				article.classList.add("bye");
				next.classList.add("hello");
				next.classList.remove("next");
				hidden.classList.remove("hidden");
				hidden.classList.add("next");
				setTimeout(() => {
					article.remove();
				}, 200);
			};

			let el = document.querySelector("button.unlike");
			el.addEventListener("click", (event) => {
				const id = document.querySelector('article:first-child').getAttribute('data-id');
				fetch('/rate/' + id + '/0');
				transition();
			});
			let el2 = document.querySelector("button.like");
			el2.addEventListener("click", (event) => {
				const id = document.querySelector('article:first-child').getAttribute('data-id');
				fetch('/rate/' + id + '/1');
				transition();
			});
		</script>
	</body>
</html>
